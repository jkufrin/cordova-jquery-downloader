<?xml version='1.0' encoding='utf-8'?>
<widget id="com.mediadynamics.downloadProcess" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>DownloadProcess</name>
    <description>
        DownloadProcess
    </description>
    <author email="info@mediadynamics.com" href="https://mediadynamics.com">
        Media Dynamics
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-navigation href="*" /> 
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="*" />
        <icon src="res/icon-beta/android/ldpi.png" density="ldpi" />
        <icon src="res/icon-beta/android/mdpi.png" density="mdpi" />
        <icon src="res/icon-beta/android/hdpi.png" density="hdpi" />
        <icon src="res/icon-beta/android/xhdpi.png" density="xhdpi" />
        <icon src="res/icon-beta/android/xxhdpi.png" density="xxhdpi" />
        <icon src="res/icon-beta/android/xxxhdpi.png" density="xxxhdpi" />
        
        <splash src="res/screen/android/splash-land-ldpi.png" density="land-ldpi"/>
        <splash src="res/screen/android/splash-land-mdpi.png" density="land-mdpi"/>
        <splash src="res/screen/android/splash-land-hdpi.png" density="land-hdpi"/>
        <splash src="res/screen/android/splash-land-xhdpi.png" density="land-xhdpi"/>
        <splash src="res/screen/android/splash-land-xxhdpi.png" density="land-xxhdpi"/>

        <splash src="res/screen/android/splash-port-ldpi.png" density="port-ldpi"/>
        <splash src="res/screen/android/splash-port-mdpi.png" density="port-mdpi"/>
        <splash src="res/screen/android/splash-port-hdpi.png" density="port-hdpi"/>
        <splash src="res/screen/android/splash-port-xhdpi.png" density="port-xhdpi"/>
        <splash src="res/screen/android/splash-port-xxhdpi.png" density="port-xxhdpi"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <allow-intent href="ms-powerpoint:*" />
        <allow-navigation href="ms-powerpoint:*" />
        <icon height="180" src="res/icon-beta/ios/icon-60@3x.png" width="180" />
        <icon height="60" src="res/icon-beta/ios/icon-60.png" width="60" />
        <icon height="120" src="res/icon-beta/ios/icon-60@2x.png" width="120" />
        <icon height="76" src="res/icon-beta/ios/icon-76.png" width="76" />
        <icon height="152" src="res/icon-beta/ios/icon-76@2x.png" width="152" />
        <icon height="40" src="res/icon-beta/ios/icon-40.png" width="40" />
        <icon height="80" src="res/icon-beta/ios/icon-40@2x.png" width="80" />
        <icon height="57" src="res/icon-beta/ios/icon.png" width="57" />
        <icon height="114" src="res/icon-beta/ios/icon@2x.png" width="114" />
        <icon height="72" src="res/icon-beta/ios/icon-72.png" width="72" />
        <icon height="144" src="res/icon-beta/ios/icon-72@2x.png" width="144" />
        <icon height="167" src="res/icon-beta/ios/icon-167.png" width="167" />
        <icon height="29" src="res/icon-beta/ios/icon-small.png" width="29" />
        <icon height="58" src="res/icon-beta/ios/icon-small@2x.png" width="58" />
        <icon height="50" src="res/icon-beta/ios/icon-50.png" width="50" />
        <icon height="100" src="res/icon-beta/ios/icon-50@2x.png" width="100" />
        <icon height="167" src="res/icon-beta/ios/icon-83.5@2x.png" width="167" />
        <splash src="res/screen/ios/Default@2x~universal~anyany.png" />
        <preference name="UseSwiftLanguageVersion" value="4" />
    </platform>
    <preference name="DisallowOverscroll" value="true"/>
    <preference name="AllowInlineMediaPlayback" value="true"/>
    <preference name="KeyboardResize" value="false" />
    <preference name="android-minSdkVersion" value="28" />
</widget>
